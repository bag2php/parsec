{
    "name": "bag2php/parsec",
    "description": "PHP monadic parser combinator framework for constructing LL(1) parsers.",
    "license": "Apache-2.0",
    "require": {
        "php": ">= 7.4"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.4",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Bag2\\Parsec\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "target-directory": "tools"
        }
    },
    "scripts": {
        "phan": "phan",
        "psalm": "psalm",
        "stan": "phpstan analyse",
        "test": "phpunit"
    }
}
